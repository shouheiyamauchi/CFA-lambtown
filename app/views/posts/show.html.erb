<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.email %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<%= render 'comments/form', comment: @comment %>

<h3>Comments</h3>

<% @comments.reverse.each do |comment|%>
<%= comment.content %><br>
<%= comment.user.email %><br><br>
<% end %>
